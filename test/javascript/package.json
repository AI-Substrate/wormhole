{
  "name": "vsc-bridge-test-javascript",
  "version": "1.0.0",
  "description": "JavaScript test fixtures for VSC-Bridge debug-single-test",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "verbose": true,
    "testTimeout": 10000,
    "clearMocks": true,
    "restoreMocks": true
  }
}