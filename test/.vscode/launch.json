// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Node: DAP Event Generator",
			"type": "pwa-node",
			"request": "launch",
			"program": "${workspaceFolder}/dap-event-generator.js",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"stopOnEntry": false,
			"exceptionBreakpointFilter": {
				"uncaught": true,
				"caught": false
			}
		},
		{
			"name": "Jest: Auth Tutorial",
			"type": "pwa-node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": [
				"javascript/auth.test.js",
				"--runInBand",
				"--no-coverage",
				"--verbose"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": [
				"<node_internals>/**"
			],
			"stopOnEntry": false,
			"exceptionBreakpointFilter": {
				"uncaught": true,
				"caught": false
			}
		},
		{
			"name": "Python: Debug Tests",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/python/sample.py",
			"purpose": [
				"debug-test"
			],
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "Python: Sample.py",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/python/sample.py",
			"console": "internalConsole",
			"justMyCode": false,
			"stopOnEntry": false
		},
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build-dotnet",
			"program": "${workspaceFolder}/csharp/bin/Debug/net9.0/sample.dll",
			"args": [],
			"cwd": "${workspaceFolder}/csharp",
			"console": "internalConsole",
			"stopAtEntry": false
		}
	]
}
