{
	"name": "vsc-bridge-extension (Default)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "../Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "node",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
			"plugins": "npm zsh-syntax-highlighting zsh-autosuggestions",
			"omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-syntax-highlighting",
			"username": "node"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12"
		},
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "9.0"
		},
		"ghcr.io/devcontainers/features/java:1": {
			"version": "21",
			"installMaven": true
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"moby": false
		},
		
		"ghcr.io/devcontainers/features/github-cli": {},
		
		"ghcr.io/jsburckhardt/devcontainer-features/uv": {}
		
	},
	"customizations": {
		"vscode": {
			"settings": {
				"files.insertFinalNewline": true,
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/usr/bin/zsh"
					}
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"chat.mcp.enabled": true
			},
			"extensions": [
				"oderwat.indent-rainbow",
				"shardulm94.trailing-spaces",
				"timonwong.shellcheck",
				"github.copilot",
				"humao.rest-client",
				"ms-python.debugpy",
				"ms-dotnettools.csdevkit",
				"redhat.java",
				"vscjava.vscode-java-debug",
				"vscjava.vscode-java-test",
				"bierner.markdown-mermaid",
				"bierner.markdown-footnotes",
				"bierner.github-markdown-preview",
				"dbaeumer.vscode-eslint",
				"ms-vscode.extension-test-runner",
				"Orta.vscode-jest",
				"vitest.explorer",
				"github.vscode-github-actions",
				"Dart-Code.dart-code"
			]
		}
	},
	// Port forwarding for SSH and other services
	"runArgs": ["-p", "2222:22", "-p", "3001:3001"],
	// Mount host SSH directory into container
	"mounts": [
		"source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.opencode,target=/home/node/.opencode,type=bind"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This is especially important for GitHub Codespaces and VS Code port forwarding
	"forwardPorts": [22, 3001],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash .devcontainer/post-install.sh",
	// Start SSH server on container startup
	"postStartCommand": "/usr/local/share/ssh-init.sh",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "node"
}
